{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": "$tsc",
      "isBackground": false,
      "presentation": {
        "reveal": "silent"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "npm: compile"
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "silent"
      },
      "group": "build",
      "label": "npm: watch"
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "silent"
      },
      "group": "build",
      "label": "npm: lint"
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "npm run compile",
      "windows": {
        "command": "if exist out rmdir /s /q out && npm run compile"
      },
      "linux": {
        "command": "rm -rf out && npm run compile"
      },
      "osx": {
        "command": "rm -rf out && npm run compile"
      },
      "problemMatcher": "$tsc",
      "group": "build"
    }
  ]
}

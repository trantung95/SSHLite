    "configuration": {
      "title": "SSH Lite",
      "properties": {
        "sshLite.hosts": {
          "type": "array",
          "default": [],
          "description": "Saved SSH hosts",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name"
              },
              "host": {
                "type": "string",
                "description": "Hostname or IP"
              },
              "port": {
                "type": "number",
                "default": 22,
                "description": "SSH port"
              },
              "username": {
                "type": "string",
                "description": "Username"
              },
              "privateKeyPath": {
                "type": "string",
                "description": "Path to private key"
              }
            },
            "required": [
              "name",
              "host",
              "username"
            ]
          }
        },
        "sshLite.sshConfigPath": {
          "type": "string",
          "default": "",
          "description": "Path to SSH config file (leave empty for default ~/.ssh/config)"
        },
        "sshLite.defaultRemotePath": {
          "type": "string",
          "default": "~",
          "description": "Default remote path when connecting"
        },
        "sshLite.autoUploadOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically upload files when saved"
        },
        "sshLite.uploadDebounceMs": {
          "type": "number",
          "default": 1000,
          "minimum": 300,
          "description": "Debounce time for auto-upload (ms)"
        },
        "sshLite.connectionTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Connection timeout (ms)"
        },
        "sshLite.keepaliveInterval": {
          "type": "number",
          "default": 30000,
          "description": "Keepalive interval (ms)"
        },
        "sshLite.treeRefreshIntervalSeconds": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Auto-refresh file tree interval in seconds (0 to disable)"
        },
        "sshLite.fileRefreshIntervalSeconds": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "description": "Auto-refresh opened files interval in seconds (0 to disable)"
        },
        "sshLite.smartRefreshThreshold": {
          "type": "number",
          "default": 512000,
          "minimum": 0,
          "description": "File size threshold in bytes for smart tail-based refresh (default: 500KB). Files larger than this that grow will only fetch new bytes instead of downloading the entire file. Set to 0 to always download full file."
        },
        "sshLite.largeFileSizeThreshold": {
          "type": "number",
          "default": 104857600,
          "description": "File size threshold in bytes for large file handling (default: 100MB)"
        },
        "sshLite.auditLogPath": {
          "type": "string",
          "default": "",
          "description": "Custom path for audit log file (leave empty for default location)"
        },
        "sshLite.credentialIndex": {
          "type": "object",
          "default": {},
          "description": "Internal: Credential index (do not edit manually)"
        },
        "sshLite.tempFileRetentionHours": {
          "type": "number",
          "default": 504,
          "minimum": 0,
          "description": "Auto-delete temp files older than this many hours (0 to disable, default: 504 = 21 days)"
        },
        "sshLite.confirmUpload": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before uploading files to server"
        },
        "sshLite.maxBackupsPerFile": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum number of backups to keep per file for revert functionality"
        },
        "sshLite.enablePreloading": {
          "type": "boolean",
          "default": true,
          "description": "Enable background preloading of directories and frequent files for faster navigation"
        },
        "sshLite.maxPreloadingConcurrency": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum number of parallel preload operations per server (lower = less server load, higher = faster preloading)"
        },
        "sshLite.progressiveDownloadThreshold": {
          "type": "number",
          "default": 1048576,
          "minimum": 0,
          "description": "File size threshold in bytes for progressive download (default: 1MB). Files larger than this show a preview of the last lines first, then download the full file in background. Set to 0 to disable progressive downloads."
        },
        "sshLite.progressivePreviewLines": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Number of lines to show in progressive preview for large files (default: 1000). These lines are loaded from the end of the file for quick viewing."
        },
        "sshLite.progressiveTailFollow": {
          "type": "boolean",
          "default": true,
          "description": "Enable live tail-f during progressive preview. When enabled, new lines appended to the file are automatically shown in the preview."
        },
        "sshLite.progressiveTailPollInterval": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "maximum": 10000,
          "description": "Interval in milliseconds for polling new lines during tail-f preview (default: 3000ms)"
        },
        "sshLite.progressiveChunkSize": {
          "type": "number",
          "default": 65536,
          "minimum": 8192,
          "maximum": 1048576,
          "description": "SFTP chunk size in bytes for progress reporting during large file downloads (default: 64KB). Larger values = faster download but less frequent progress updates."
        },
        "sshLite.searchMaxResults": {
          "type": "number",
          "default": 2000,
          "minimum": 1,
          "description": "Maximum number of search results to return (default: 2000). Set to 0 for unlimited. Higher values may be slower on large directories."
        },
        "sshLite.filterMaxResults": {
          "type": "number",
          "default": 1000,
          "minimum": 1,
          "description": "Maximum number of files to show when filtering (default: 1000)."
        },
        "sshLite.searchParallelProcesses": {
          "type": "number",
          "default": 20,
          "minimum": 5,
          "maximum": 50,
          "description": "Default parallel search workers per folder. Each server can override this in the search panel. Minimum 5."
        },
        "sshLite.searchExcludeSystemDirs": {
          "type": "boolean",
          "default": true,
          "description": "Auto-exclude system directories (/proc, /sys, /dev, /run) when searching from root /. A notice is shown to let you include them."
        }
      }
    },
    "keybindings": [
      {
        "command": "sshLite.connect",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "view == sshLite.hosts"
      },
      {
        "command": "sshLite.openTerminal",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "sshLite.hasConnections"
      },
      {
        "command": "sshLite.refreshFiles",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "view == sshLite.fileExplorer"
      },
      {
        "command": "sshLite.goToPath",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "view == sshLite.fileExplorer && sshLite.hasConnections"
      },
      {
        "command": "sshLite.filterFiles",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "view == sshLite.fileExplorer && sshLite.hasConnections"
      },
      {
        "command": "sshLite.showSearch",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "view == sshLite.fileExplorer && sshLite.hasConnections"
      },
      {
        "command": "sshLite.renameRemote",
        "key": "f2",
        "when": "focusedView == sshLite.fileExplorer && listFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
